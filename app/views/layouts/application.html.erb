<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= stylesheet_link_tag "bootstrap", :media => "all" %>
  <%= stylesheet_link_tag "print", :media => "print" %>
  <%= javascript_include_tag "jquery.min" %>
  <%#= stylesheet_link_tag "style" %>
  <%# javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
	<ul class="tabs">
		<li><%= link_to 'Home', '/' %></li>
		<li><%= link_to 'Resources', resources_pages_path %></li>
		<% if @event %>
		<li><%= link_to 'Worksheet', event_path(@event) unless @event.new_record? %></li>
		<li><%= link_to 'Amend Event', edit_event_path(@event) unless @event.new_record? %></li>
		<li><%= link_to 'Submit Program', new_event_attempt_path(@event) unless @event.new_record? %></li>
		<% else%>
		<li><%= link_to 'Add an event', new_event_path %></li>
		<% end %>
    </ul>
	
<%= yield %>
</div>

</body>
</html>
